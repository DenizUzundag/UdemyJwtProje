
@model AppUserLoginDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="/" method="post" class="w-75 mx-auto p-3 mt-4">

    <div class="form-group">
        <label>Kullanıcı Adı:</label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control" type="text" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary btn-sm" type="submit">Giriş Yap</button>
        <a class="btn btn-primary btn-sm" asp-action="SignUp" asp-controller="Account">Kayıt ol</a>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    </div>

</form>